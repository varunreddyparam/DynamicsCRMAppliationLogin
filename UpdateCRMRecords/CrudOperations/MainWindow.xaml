<Window x:Class="CrudOperations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudOperations"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Connect">
                <MenuItem Header="CRMLogin" Click="CRMLoginClick"/>
                <MenuItem Header="AppRegistration Login"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Settings">
                <MenuItem Header="FetchXMLView"/>
            </MenuItem>
        </Menu>
        <StackPanel>
            <Grid>
                <DataGrid Name="dgUsers" AutoGenerateColumns="True">
                </DataGrid>
            </Grid>
        </StackPanel>
    </DockPanel>
</Window>
